<section class="section posts-entry">
	<div class="container">
		<div class="row mb-4">
			<div class="col-sm-6">
				<h2 class="posts-entry-title">Technology</h2>
			</div>
			<div class="col-sm-6 text-sm-end">
				<a
					href="/category/technology"
					class="read-more"
					>View All</a
				>
			</div>
		</div>
		<div class="row g-3">
			<div class="col-md-9 order-md-2">
				<div class="row g-3">
					<div class="col-md-6">
						<!-- first photo link -->
						<div class="blog-entry">
							<a
								href="/single/<%= technology[0]._id %>"
								class="img-link"
							>
								<img
									src="<%= technology[0].image %>"
									alt="Image"
									class="img-fluid"
								/>
							</a>
							<span class="date"><%= technology[0].date %></span>
							<h2>
								<a href="/single/<%= technology[0]._id %>"
									><%= technology[0].title %></a
								>
							</h2>
							<p class="text-truncate"><%= technology[0].body %></p>
							<p>
								<a
									href="/single/<%= technology[0]._id %>"
									class="btn btn-sm btn-outline-primary"
									>Read More</a
								>
							</p>
						</div>
					</div>
					<!-- Second Photo Link -->
					<div class="col-md-6">
						<div class="blog-entry">
							<a
								href="/single/<%= technology[1]._id %>"
								class="img-link"
							>
								<img
									src="<%= technology[1].image %>"
									alt="Image"
									class="img-fluid"
								/>
							</a>
							<span class="date"><%= technology[1].date %></span>
							<h2>
								<a href="/single/<%= technology[1]._id %>"
									><%= technology[1].title %></a
								>
							</h2>
							<p class="text-truncate"><%= technology[1].body %></p>
							<p>
								<a
									href="/single/<%= technology[1]._id %>"
									class="btn btn-sm btn-outline-primary"
									>Read More</a
								>
							</p>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<ul class="list-unstyled blog-entry-sm">
					<% for( let i = 1; i < 4; i++ ) { %>
					<li>
						<span class="date"><%= technology[i].date %></span>
						<h3>
							<a href="/single/<%= technology[i]._id %>"
								><%= technology[i].title %></a
							>
						</h3>
						<p class="text-truncate"><%= technology[i].body %></p>
						<p>
							<a
								href="<%= technology[i]._id %>"
								class="read-more"
								>Continue Reading</a
							>
						</p>
					</li>
					<% } %>
				</ul>
			</div>
		</div>
	</div>
</section>
