<section class="section posts-entry">
	<div class="container">
		<div class="row mb-4">
			<div class="col-sm-6">
				<h2 class="posts-entry-title">World News</h2>
			</div>
			<div class="col-sm-6 text-sm-end">
				<a
					href="/category/news"
					class="read-more"
					>View All</a
				>
			</div>
		</div>
		<div class="row g-3">
			<div class="col-md-9">
				<div class="row g-3">
					<div class="col-md-6">
						<div class="blog-entry">
							<a
								href="/single/<%= news[0]._id %>"
								class="img-link"
							>
								<!-- TODO images need to be verticle -->
								<img
									src="<%= news[0].image %>"
									alt="Image"
									class="img-fluid"
								/>
							</a>
							<span class="date"><%= news[0].date %></span>
							<h2>
								<a href="/single"><%= news[0].title %></a>
							</h2>
							<p class="text-truncate"><%= news[0].body %></p>
							<p>
								<a
									href="/single/<%= news[0]._id %>"
									class="btn btn-sm btn-outline-primary"
									>Read More</a
								>
							</p>
						</div>
					</div>
					<div class="col-md-6">
						<div class="blog-entry">
							<a
								href="/single/<%= news[1]._id %>"
								class="img-link"
							>
								<img
									src="<%= news[1].image %>"
									alt="Image"
									class="img-fluid"
								/>
							</a>
							<span class="date"><%= news[1].date %></span>
							<h2>
								<a href="/single/<%= news[1]._id %>"><%= news[1].title %></a>
							</h2>
							<p class="text-truncate"><%= news[1].body %></p>
							<p>
								<a
									href="/single/<%= news[1]._id %>"
									class="btn btn-sm btn-outline-primary"
									>Read More</a
								>
							</p>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<ul class="list-unstyled blog-entry-sm">
					<% for( let i = 2; i < 5; i++ ) { %>

					<li>
						<span class="date"><%= news[i].date %></span>
						<h3>
							<a href="/single/<%= news[i]._id %>"><%= news[i].title %></a>
						</h3>
						<p class="text-truncate"><%= news[i].body %></p>
						<p>
							<a
								href="/single/<%= news[i]._id %>"
								class="read-more"
								>Continue Reading</a
							>
						</p>
					</li>
					<% } %>
				</ul>
			</div>
		</div>
	</div>
</section>
