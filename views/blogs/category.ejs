<% layout('layouts/boilerplate') %>
<div class="section search-result-wrap">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="heading">Category: <%=blogs[0].category%></div>
			</div>
		</div>
		<div class="row posts-entry">
			<div class="col-lg-8">
				<% for( let i = 0; i < blogs.length; i++ ) { %>
				<div class="blog-entry d-flex blog-entry-search-item">
					<a
						href="/single/<%=blogs[i]._id%>"
						class="img-link me-4"
					>
						<img
							src="<%=blogs[i].image%>"
							alt="Image"
							class="img-fluid"
						/>
					</a>
					<div>
						<span class="date"
							><%=blogs[i].date%> &bullet;
							<a href="/category/<%=blogs[i].category%>"
								><%=blogs[i].category%></a
							></span
						>
						<h2>
							<a href="/single/<%=blogs[i]._id%>"><%=blogs[i].title%></a>
						</h2>
						<!-- Can be used instead of truncate class -->
						<!-- <p> <%=blogs[i].body.substring(0, 100) + "..." %> </p> -->
						<!--  -->
						<p class="blog-entry-truncate"><%=blogs[i].body%></p>
						<p>
							<a
								href="/single/<%=blogs[i]._id%>"
								class="btn btn-sm btn-outline-primary"
								>Read More</a
							>
						</p>
					</div>
				</div>
				<% } %>
				<div class="row text-start pt-5 border-top">
					<div class="col-md-12">
						<!-- TODO set up pagination for 5 articles per page -->
