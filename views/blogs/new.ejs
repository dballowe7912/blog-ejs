<% layout('layouts/boilerplate') %>
<div class="row mt-4">
	<h1 class="text-center">New Blog</h1>
	<div class="col-6 offset-3 mb-4">
		<form
			action="/new"
			method="POST"
			novalidate
			class="validated-form"
		>
			<div class="mb-3">
				<label
					for="title"
					class="form-label"
					>Title</label
				>
				<input
					type="text"
					name="blog[title]"
					id="title"
					class="form-control"
					required
				/>
			</div>
			<div class="mb-3">
				<label
					for="body"
					class="form-label"
					>Blog Body</label
				>
				<textarea
					type="text"
					name="blog[body]"
					id="description"
					class="form-control"
					required
				></textarea>
			</div>
			<div class="mb-3">
				<label
					for="image"
					class="form-label"
					>Image Url</label
				>
				<input
					type="text"
					name="blog[image]"
					id="image"
					class="form-control"
				/>
			</div>

			<div class="mb-3">
				<label
					class="form-label me-4"
					for="category"
					>Category:</label
				>
				<!-- <div class="input-group">
					<input
						type="text"
						class="form-control"
						id="category"
						placeholder="please select a category"
						aria-label="category"
						aria-describedby="category-label"
						name="blog[category]"
						required
					/>
				</div> -->
				<!-- culture, business, politics, travel, -->
				<div class="form-check form-check-inline">
					<input
						class="form-check-input"
						type="radio"
						name="blog[category]"
						id="general"
						value="general"
					/>
					<label
						class="form-check-label"
						for="general"
						>general</label
					>
				</div>
				<div class="form-check form-check-inline">
					<input
						class="form-check-input"
						type="radio"
						name="blog[category]"
						id="culture"
						value="culture"
					/>
					<label
						class="form-check-label"
						for="culture"
						>culture</label
					>
				</div>
				<div class="form-check form-check-inline">
					<input
						class="form-check-input"
						type="radio"
						name="blog[category]"
						id="business"
						value="business"
					/>
					<label
						class="form-check-label"
						for="business"
						>business</label
					>
				</div>
				<div class="form-check form-check-inline">
					<input
						class="form-check-input"
						type="radio"
						name="blog[category]"
						id="politics"
						value="politics"
					/>
					<label
						class="form-check-label"
						for="politics"
						>politics</label
					>
				</div>
				<div class="form-check form-check-inline">
					<input
						class="form-check-input"
						type="radio"
						name="blog[category]"
						id="travel"
						value="travel"
					/>
					<label
						class="form-check-label"
						for="travel"
						>travel</label
					>
				</div>
			</div>

			<div class="mb-3">
				<button class="btn btn-primary">Create Blog</button>
			</div>
		</form>
		<a href="/blogs">All Blogs</a>
	</div>
</div>
